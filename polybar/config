[colors]
;background = ${xrdb:color0:#222}
background = #1d1f21
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #c5c8c6
foreground-alt = #555

primary = #ffb52a
secondary = #e60053
alert = #bd2c40


[bar/example]
monitor = ${env:MONITOR:HDMI-1-1}
monitor-fallback = LVDS-1-1

width = 100%
height = 27
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

